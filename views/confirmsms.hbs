    </div>
</div>
<script>
$("#form").submit(function(event) {
    var c = $("#code").val();
    if (c === "{{smsConfirmationCode}}") {
        return;
    }else{
        $("#span").text("You have entered a wrong code").show();
    }
    event.preventDefault();
});
$(function() {
    $('body').css({ "background-image": 'none', "background-color": "white", });
});
</script>