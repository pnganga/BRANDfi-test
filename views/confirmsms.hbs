<div id="content">
    <div id="container">
        <div class="header row">
            <div>
                <h1>Welcome to Java House</h1>
                <p>Please enjoy our complimentary WiFi and a Cappucino!</p>
            </div>
            <div>
                <img class="text-center" src="/img/Java-House.jpg" style="width:10%; margin:10px;">
            </div>
        </div>
        <h2>Enter the code received on your phone</h2>
        <br>
        <div id="continue" class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <!-- <h3>Sms login</h3> -->
                <form action="/auth/confirmsms" method="post">
                    <p class="text-danger">{{error}}</p>
                    <div class="input-group " style="padding-left: 100px;">
                        <input type="text" class="form-control" name="code" placeholder="Enter code" required>
                        <br>
                        <br>
                        <div class="input-group-append">
                        <button class="btn btn-primary btn-outline-secondary" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-sm-3"></div>
        </div>
        <br>
        <span class=""><a href="/terms" style="color: #26a69a; text-decoration: none;">Terms and Conditions</a></span>
    </div>
    <div class="footer">
        <p>Your IP: {{client_ip}}</p>
        <p>Your MAC: {{client_mac}}</p>
        <p>AP MAC: {{node_mac}}</p>
        <h3>POWERED BY</h3>
        <a href="www.brandfi.co.ke"><h2 style="color: green; text-decoration: none;">BRAND-fi</h2></a>
