<div>
    <br>
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <img style="padding-left: 100px;" class="img-responsive" src="/img/Java-House.jpg" alt="" class="img-responsive">
            <br>
        </div>
        <div class="col-sm-4"></div>
    </div>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6" class="img-responsive">
            <div id="" style="background-color: hsla(0, 100%, 100%, 0.6);">
                <br>
                <h1 style=" font-weight: bold;">PREMIUM WI-FI</h1>
                <div class="row img-responsive">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-6">
                        <img class="img-responsive" src="/img/mpesa.gif" alt="">
                    </div>
                    <div class="col-sm-3"></div>
                </div>
                <p>Please enter your details below, click proceed and finish the transaction on your phone</p>
                <div id="container" style="background-color: hsla(0, 100%, 100%, 0.6);">
                    <br>
                    <br>
                    <form action="/premium" method="post" class="form col-md-12 center-block">
                        <div class="form-group ">
                            <input class="form-control input-lg" type="text" name="fname" placeholder="First name" required>
                            <i class="icon-user icon-large"></i>
                        </div>
                        <div class="form-group">
                            <input class="form-control input-lg" type="text" name="lname" placeholder="Last name" required>
                            <i class="icon-lock icon-large"></i>
                        </div>
                        <div class="form-group">
                            <input class="form-control input-lg" type="text" name="uname" placeholder="Mpesa number" title="Format: 07XXXXXXXX" pattern="07([0-9|9])(\d){7}" required>
                            <i class="icon-lock icon-large"></i>
                        </div>
                        <div class="form-group">
                            <select name="plan" class="form-control input-lg" required>
                                <option value="" disabled selected>Choose a plan</option>
                                {{#each tariffs}}
                                <option value="10"><span>{{this.name}}:</span> Kshs {{this.price}} for {{this.validity}} {{this.validity_unit}}</span</option>
                                    {{/each}}</option>
                                <option value="20">Kahawa: <span>1 hour - Kshs 20</span></option>
                                <option value="150">Biashara: 8 hours - Kshs 150</option>
                            </select>
                            <i class="icon-lock icon-large"></i>
                        </div>
                        <div class="form-group ">
                            <button id="proceed" class="btn btn-primary btn-lg btn-block disabled">Proceed to pay</button>
                        </div>
                    </form>
                    <div class="form-group">
                        <span><input id="terms" style="border-color: green; border-width: 2px;" type="checkbox"> Please confirm you agree to the <span><a href="/terms" style="color: #26a69a;">terms and conditions</a></span></span>
                        <i class="icon-lock icon-large"></i>
                    </div>
                    <br>
                    <br>
                </div>
                <!-- <br> -->
            </div>
            <br>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
<script>
// $(document).ready(function() {

$(function() {
    $("#terms").click(function() {
    
    $('#proceed').toggleClass('disabled');
});
   
});
</script>